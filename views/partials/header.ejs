<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KreatorAI - AI Tools Untuk Kreator Indonesia</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            padding-top: 4rem;
        }
        .dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 10;
            border-radius: 0.5rem;
        }
        .dropdown-menu a:hover {
            background-color: #f3f4f6;
            color: #2563eb;
        }
    </style>
</head>
<body class="bg-gray-100">
    <nav id="header" class="bg-white shadow-lg fixed w-full z-50 top-0">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="#" class="text-xl font-bold text-gray-700">Brand</a>
                </div>
                <!-- Menu Desktop -->
                <div class="hidden md:flex space-x-6 items-center">
                    <a href="#" class="text-gray-700 hover:text-blue-500">Home</a>
                    <a href="#" class="text-gray-700 hover:text-blue-500">About</a>

                    <!-- Dropdown Menu -->
                    <div class="relative" id="dropdownContainer">
                        <button id="dropdownButton" class="flex items-center text-gray-700 hover:text-blue-500 focus:outline-none">
                            Services
                            <svg class="w-4 h-4 ml-1 transition-transform duration-200" id="dropdownArrow"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div id="dropdownMenu" class="absolute hidden bg-white shadow-md rounded-md mt-2 py-2 w-48 z-10">
                            <a href="#" class="block px-4 py-2 hover:bg-blue-200">Web Development</a>
                            <a href="#" class="block px-4 py-2 hover:bg-blue-200">SEO</a>
                            <a href="#" class="block px-4 py-2 hover:bg-blue-200">Marketing</a>
                        </div>
                    </div>

                    <a href="#" class="text-gray-700 hover:text-blue-500">Contact</a>

                    <% if (locals.user) { %>
                        <a href="/logout" class="text-red-500 hover:text-red-700">Logout</a>
                    <% } %>
                    <% if (locals.user && locals.user.role === 'admin') { %>
                        <a href="/admin" class="text-gray-700 hover:text-blue-500">Admin Panel</a>
                    <% } %>
                </div>

                <!-- Mobile Menu Button -->
                <div class="md:hidden flex items-center">
                    <button id="menu-btn" class="text-gray-700 focus:outline-none">
                        ☰
                    </button>
                </div>
            </div>
        </div>
        <!-- Menu Mobile -->
        <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg py-2">
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Home</a>
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">About</a>
            <div class="group">
                <button class="w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100" id="submenu-btn">Services ▼</button>
                <div id="submenu" class="hidden bg-gray-50 pl-6">
                    <a href="#" class="block px-4 py-2 hover:bg-blue-200">Web Development</a>
                    <a href="#" class="block px-4 py-2 hover:bg-blue-200">SEO</a>
                    <a href="#" class="block px-4 py-2 hover:bg-blue-200">Marketing</a>
                </div>
            </div>
            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Contact</a>
            <% if (locals.user) { %>
                <a href="/logout" class="block px-4 py-2 text-red-500 hover:bg-gray-100">Logout</a>
            <% } %>
            <% if (locals.user && locals.user.role === 'admin') { %>
                <a href="/admin" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Admin Panel</a>
            <% } %>
        </div>
    </nav>
    
    <script>
        // Toggle Mobile Menu
        document.getElementById('menu-btn').addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        // Toggle Submenu Mobile
        document.getElementById('submenu-btn').addEventListener('click', function() {
            document.getElementById('submenu').classList.toggle('hidden');
        });
        
        // Hide Header on /login Page
        if (window.location.pathname === "/login") {
            document.getElementById("header").style.display = "none";
        }

        document.addEventListener("DOMContentLoaded", function () {
        const dropdownContainer = document.getElementById("dropdownContainer");
        const dropdownButton = document.getElementById("dropdownButton");
        const dropdownMenu = document.getElementById("dropdownMenu");
        const dropdownArrow = document.getElementById("dropdownArrow");

        let timeout; // Untuk menunda penutupan dropdown

        function showDropdown() {
            clearTimeout(timeout);
            dropdownMenu.classList.remove("hidden");
            dropdownArrow.classList.add("rotate-180");
        }

        function hideDropdown() {
            timeout = setTimeout(() => {
                dropdownMenu.classList.add("hidden");
                dropdownArrow.classList.remove("rotate-180");
            }, 300); // Delay 300ms agar tidak langsung tertutup
        }

        dropdownContainer.addEventListener("mouseenter", showDropdown);
        dropdownContainer.addEventListener("mouseleave", hideDropdown);

        dropdownMenu.addEventListener("mouseenter", showDropdown);
        dropdownMenu.addEventListener("mouseleave", hideDropdown);
    });
    </script>
</body>
</html>
