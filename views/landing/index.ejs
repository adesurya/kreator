<!-- views/landing/index.ejs -->

<!-- Hero Section -->
<%- include('_hero') %>

<!-- Features Section -->
<%- include('_features') %>

<!-- Pricing Section -->
<%- include('_pricing') %>

<!-- CTA Section -->
<%- include('_cta') %>

<!-- Hero Section -->
<section class="relative pt-32 pb-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
            <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
                <h1>
                    <span class="block text-sm font-semibold uppercase tracking-wide text-blue-600">
                        Introducing KreatorAI
                    </span>
                    <span class="mt-1 block text-4xl tracking-tight font-extrabold sm:text-5xl xl:text-6xl">
                        Transform Your Business with AI
                    </span>
                </h1>
                <p class="mt-3 text-base text-gray-600 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                    Generate content, optimize your business profile, and boost productivity with our suite of AI-powered tools. Get started in minutes.
                </p>
                <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
                    <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
                        <div class="rounded-md shadow">
                            <a href="/register" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10">
                                Get started for free
                            </a>
                        </div>
                        <div class="mt-3 sm:mt-0 sm:ml-3">
                            <a href="#features" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-gray-600 bg-gray-100 hover:bg-gray-200 md:py-4 md:text-lg md:px-10">
                                Learn more
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
                <div class="relative mx-auto w-full rounded-lg shadow-lg lg:max-w-md">
                    <img class="w-full" src="/images/hero-dashboard.png" alt="KreatorAI Dashboard">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                Everything you need to grow your business
            </h2>
            <p class="mt-4 max-w-2xl text-xl text-gray-600 mx-auto">
                Our AI-powered tools help you create content, manage social media, and boost productivity.
            </p>
        </div>

        <div class="mt-20">
            <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-3">
                <% features.forEach(feature => { %>
                    <div class="group relative bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
                        <div class="absolute top-6 right-6">
                            <div class="h-12 w-12 text-blue-600">
                                <!-- Icon will be inserted here based on feature.icon -->
                            </div>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900">
                            <%= feature.title %>
                        </h3>
                        <p class="mt-4 text-gray-600">
                            <%= feature.description %>
                        </p>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Trusted by businesses worldwide
            </h2>
            <p class="mt-4 text-xl text-gray-600">
                See what our customers are saying about KreatorAI
            </p>
        </div>

        <div class="mt-20">
            <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
                <% testimonials.forEach(testimonial => { %>
                    <div class="bg-gray-50 rounded-xl p-8 relative">
                        <div class="flex items-center mb-8">
                            <img class="h-12 w-12 rounded-full" src="<%= testimonial.avatar %>" alt="<%= testimonial.name %>">
                            <div class="ml-4">
                                <h4 class="text-lg font-semibold text-gray-900"><%= testimonial.name %></h4>
                                <p class="text-gray-600"><%= testimonial.role %> at <%= testimonial.company %></p>
                            </div>
                        </div>
                        <p class="text-gray-600 italic">"<%= testimonial.content %>"</p>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Simple, transparent pricing
            </h2>
            <p class="mt-4 text-xl text-gray-600">
                No hidden fees. No surprise charges. Start free and upgrade when you're ready.
            </p>
        </div>

        <div class="mt-20">
            <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-8">
                <% plans.forEach(plan => { %>
                    <div class="relative <%= plan.popular ? 'border-2 border-blue-500' : 'border border-gray-200' %> rounded-2xl bg-white shadow-lg p-8">
                        <% if (plan.popular) { %>
                            <div class="absolute top-0 right-6 -translate-y-1/2">
                                <span class="inline-flex items-center px-4 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800">
                                    Most Popular
                                </span>
                            </div>
                        <% } %>
                        <div class="text-center">
                            <h3 class="text-2xl font-semibold text-gray-900"><%= plan.name %></h3>
                            <div class="mt-4 flex items-baseline justify-center">
                                <span class="text-5xl font-extrabold text-gray-900">$<%= plan.price %></span>
                                <span class="ml-1 text-xl font-semibold text-gray-600">/<%= plan.period %></span>
                            </div>
                        </div>
                        <ul class="mt-8 space-y-4">
                            <% plan.features.forEach(feature => { %>
                                <li class="flex items-center">
                                    <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                    <span class="ml-3 text-gray-600"><%= feature %></span>
                                </li>
                            <% }); %>
                        </ul>
                        <div class="mt-8">
                            <a href="/register" class="w-full flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                <%= plan.cta %>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="relative py-20 bg-gradient-to-r from-blue-600 to-blue-800">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
                Ready to transform your business?
            </h2>
            <p class="mt-4 text-xl text-blue-100">
                Join thousands of businesses already using KreatorAI to grow their online presence.
            </p>
            <div class="mt-8 flex justify-center">
                <div class="inline-flex rounded-md shadow">
                    <a href="/register" class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10">
                        Get started for free
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>