<!-- views/admin/dashboard.ejs -->
<%- contentFor('body') %>
<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
        <p class="text-gray-600">Welcome back, <%= user.username %></p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Total Users Card -->
        <div class="bg-blue-100 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-2">Total Users</h2>
            <p class="text-3xl font-bold"><%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %></p>
        </div>

        <!-- Active Conversations Card -->
        <div class="bg-green-100 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-2">Active Conversations</h2>
            <p class="text-3xl font-bold"><%= typeof activeConversations !== 'undefined' ? activeConversations : 0 %></p>
        </div>

        <!-- Total Messages Card -->
        <div class="bg-purple-100 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-2">Total Messages</h2>
            <p class="text-3xl font-bold"><%= typeof totalMessages !== 'undefined' ? totalMessages : 0 %></p>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="mt-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a href="/admin/users" class="bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold mb-2">Manage Users</h3>
                <p class="text-gray-600">View and manage user accounts</p>
            </a>
            
            <a href="/chat" class="bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold mb-2">Chat Interface</h3>
                <p class="text-gray-600">Access the chat interface</p>
            </a>

            <a href="/admin/settings" class="bg-white p-4 rounded-lg shadow hover:shadow-md transition-shadow">
                <h3 class="text-lg font-semibold mb-2">Settings</h3>
                <p class="text-gray-600">Configure application settings</p>
            </a>
        </div>
    </div>

    <!-- Recent Activity Section (Optional) -->
    <div class="mt-8">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Recent Activity</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-4">
                <p class="text-gray-600 text-center">No recent activity</p>
            </div>
        </div>
    </div>
</div>

<%- contentFor('script') %>
